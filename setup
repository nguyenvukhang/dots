#!/usr/bin/env bash

# run this script to install stuff with stow
# run it with a -D flag to uninstall stuff

stow_list=(nvim zsh kitty pass personal)

del=false
[ $1 ] && [ $1 = "-D" ] && del=true

for i in ${stow_list[@]}; do
  stow -D --target $HOME $i &> /dev/null
  [[ $del = false ]] && stow --target $HOME $i
done
