{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "types": ["node"],
    "noImplicitThis": false,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
