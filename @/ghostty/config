# Keybinds!

keybind = clear
keybind = super+v=paste_from_clipboard
keybind = super+shift+r=reload_config
keybind = super+d=new_split:left
keybind = super+shift+d=new_split:down
keybind = super+n=new_tab
keybind = super+h=goto_split:left
keybind = super+j=goto_split:down
keybind = super+k=goto_split:up
keybind = super+l=goto_split:right

keybind = super+shift+h=previous_tab
keybind = super+shift+l=next_tab

keybind = ctrl+space>h=move_tab:-1
keybind = ctrl+space>l=move_tab:1
keybind = ctrl+space>x=close_window

keybind = super+equal=increase_font_size:0.5
keybind = super+minus=decrease_font_size:0.5
keybind = super+0=reset_font_size
keybind = super+comma=prompt_surface_title

keybind = super+q=quit
