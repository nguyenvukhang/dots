#!/usr/bin/env zsh

# tmux session manager:
# goal: make sure non-base sessions exit back to base session instead of quitting terminal.

# always assume that thas script is ran from outside of tmux
[ $TMUX ] && exit 1 # silently quit if already in tmux


BEFORE=$(date '+%d-%b %R:%S')
echo "before exec $BEFORE">>~/dots/zsh/.local/bin/logger.txt
# spawn the base session if not exists
#
exec tmux new-session -As base

AFTER=$(date '+%d-%b %R:%S')
echo "after exec $ATFER">>~/dots/zsh/.local/bin/logger.txt
