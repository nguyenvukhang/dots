#! /bin/zsh

BASE="$HOME/repos/uni/nightly"

cd $BASE && \
fd --type file \
--base-directory $BASE \
--extension md \
--color=never \
| fzf --no-info \
--no-mouse \
+m \
--keep-right \
--reverse \
--no-bold \
--prompt=' > ' \
--header='' \
--padding=1 \
| (nohup xargs -I{} /usr/bin/typora "{}" >/dev/null 2>&1 &)

